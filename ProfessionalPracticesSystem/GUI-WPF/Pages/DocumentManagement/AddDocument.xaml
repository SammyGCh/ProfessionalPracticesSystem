<Page x:Class="GUI_WPF.AddDocument"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI_WPF"
      mc:Ignorable="d" 
      Height="auto" Width="auto"
      Title="AddDocument">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <WebBrowser x:Name="pdfViewer" HorizontalAlignment="Center" Height="600" VerticalAlignment="Top" Width="500" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
                <Button Content="Aceptar" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="75" Click="Accept"/>
                <Button Content="Seleccionar" HorizontalAlignment="Left" Margin="15,0,15,0" VerticalAlignment="Top" Width="120" Click="Select" RenderTransformOrigin="0.5,0.5"/>
                <Button Content="Cancelar" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="75" Click="Cancel" Height="35"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
