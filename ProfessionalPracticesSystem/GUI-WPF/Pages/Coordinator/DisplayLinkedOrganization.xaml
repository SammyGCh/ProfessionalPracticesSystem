            <TextBox HorizontalAlignment="Left" Height="48" TextWrapping="Wrap" VerticalAlignment="Top" Width="536" Text="{Binding TelephoneNumber}" FontSize="30" Foreground="Black" BorderBrush="{x:Null}" Margin="151,192,0,0"/>
            <TextBox HorizontalAlignment="Left" Height="48" TextWrapping="Wrap" VerticalAlignment="Top" Width="536" Text="{Binding OrganizationSector}" FontSize="30" Foreground="Black" BorderBrush="{x:Null}" Margin="109,240,0,0"/>
        </Grid>
        <TextBox HorizontalAlignment="Left" Height="82" Margin="268,113,0,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top" Width="438" Grid.ColumnSpan="2" BorderBrush="{x:Null}" FontSize="50"/>
