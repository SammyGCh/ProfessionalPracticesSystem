        <Grid HorizontalAlignment="Left" Height="306" Margin="193,200,0,0" VerticalAlignment="Top" Width="932" Grid.ColumnSpan="2">
            <TextBox HorizontalAlignment="Left" Height="48" TextWrapping="Wrap" VerticalAlignment="Top" Width="109" Text="Estado:" FontSize="30" Foreground="Black" BorderBrush="{x:Null}"/>
