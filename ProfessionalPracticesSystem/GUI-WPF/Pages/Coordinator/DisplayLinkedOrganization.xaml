            <TextBox HorizontalAlignment="Left" Height="48" TextWrapping="Wrap" VerticalAlignment="Top" Width="146" Text="Teléfono:" FontSize="30" Margin="0,192,0,0" BorderBrush="{x:Null}"/>
            <TextBox HorizontalAlignment="Left" Height="48" TextWrapping="Wrap" VerticalAlignment="Top" Width="146" Text="Sector:" FontSize="30" Margin="0,240,0,0" BorderBrush="{x:Null}"/>
