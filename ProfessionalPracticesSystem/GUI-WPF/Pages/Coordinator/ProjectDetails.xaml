<Page x:Class="GUI_WPF.Pages.Coordinator.ProjectDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI_WPF.Pages.Coordinator"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:uc="clr-namespace:GUI_WPF.UserControls.Project"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1200"
      Height="Auto"
      Width="Auto"
      WindowTitle="Detalles del proyecto"
      Title="ProjectDetails">

    <ScrollViewer HorizontalScrollBarVisibility="Auto">
        <StackPanel Background="White">

            <StackPanel>
                <uc:ProjectDetailsControl/>
            </StackPanel>

            <StackPanel Width="130" Margin="40">
                <Button Click="GoBack">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ArrowBack" Margin="0,2,5,0"/>
                        <TextBlock Text="Regresar"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
