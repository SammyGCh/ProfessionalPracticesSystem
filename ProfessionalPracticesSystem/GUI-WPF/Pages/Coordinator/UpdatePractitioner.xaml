<Page x:Class="GUI_WPF.Pages.Coordinator.UpdatePractitioner"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:GUI_WPF.Pages.Coordinator"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="900"
      Title="UpdatePractitioner">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" >
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="37*"/>
                <RowDefinition Height="188*"/>
            </Grid.RowDefinitions>

            <TextBlock HorizontalAlignment="Left" Margin="52,10,0,0" TextWrapping="Wrap" Text="Actualizar Practicante" 
                  Grid.Row="0" VerticalAlignment="Top" FontSize="40" FontWeight="Bold" RenderTransformOrigin="0.508,0.142" Height="54" Width="459"/>

            <StackPanel Grid.Row="1">

                <materialDesign:Card Background="AliceBlue" Margin="66,30,67,30" Padding="10" BorderThickness="50" Width="750" Height="446">
                    <StackPanel x:Name="practitionerData" Margin="0,40,0,8">
                        <TextBlock FontSize="18" FontWeight="SemiBold" Margin="40,0,0,0"><Run Text="Ingrese la  información nueva del Practicante"/></TextBlock>

                        <StackPanel Orientation="Horizontal" Height="25" Width="480" Margin="0,15,0,0">
                            <TextBlock Text="Matricula (*): " Margin="0,2,15,4.8" FontSize="14" TextAlignment="Right" Width="84"/>
                            <TextBox x:Name="practitionerMatricula" Width="386" TextChanged="ValidateText" Text="{Binding Matricula}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Width="480" Margin="10" Height="25">
                            <TextBlock Text="Nombres (*): " Margin="1,2,16,0" FontSize="14" TextAlignment="Right"/>
                            <TextBox x:Name="practitionerNames" Width="386" TextChanged="ValidateText" Text="{Binding Names}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Width="480" Margin="10" Height="25">
                            <TextBlock Text="Apellidos (*): " Margin="2,2,18,-0.2" FontSize="14" TextAlignment="Right"/>
                            <TextBox x:Name="practitionerSurname" Width="386" TextChanged="ValidateText" Text="{Binding LastName}" Margin="-5,0,0,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Width="480" Margin="10" Height="25">
                            <TextBlock Text="Genero (*): " Margin="13,3,18,0" FontSize="14" TextAlignment="Right" TextWrapping="Wrap"/>
                            <ComboBox x:Name="practitionerGender" Width="250" Margin="0,10,0,0" ItemsSource="{Binding genderList}"
                                      DisplayMemberPath="Name" IsSynchronizedWithCurrentItem="True" SelectedItem="{Binding Gender}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Width="480" Height="25" Margin="10">
                            <TextBlock Text="Lengua Indigena (*): " Margin="-47,3,18,1" FontSize="14" />
                            <ComboBox x:Name="practitionerLanguageList" Width="250" Margin="0,10,0,0" ItemsSource="{Binding indigenousLanguageList}"
                                      DisplayMemberPath="Name" IsSynchronizedWithCurrentItem="True" SelectedItem="{Binding Speaks}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Width="480" Height="25" Margin="10">
                            <TextBlock Text="Académico Asignado (*): " Margin="-73,3,18,1" FontSize="14" />
                            <ComboBox x:Name="practitionerAcademicList" Width="250" Margin="0,10,0,0" ItemsSource="{Binding academicList}"
                                      DisplayMemberPath="Name" IsSynchronizedWithCurrentItem="True" SelectedItem="{Binding Instructed}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Width="480" Height="25" Margin="10">
                            <TextBlock Text="Periodo Escolar (*): " Margin="-37,3,18,1" FontSize="14" />
                            <ComboBox x:Name="practitionerSchoolPeriodList" Width="250" Margin="0,10,0,0" ItemsSource="{Binding schoolPeriodList}"
                                      DisplayMemberPath="Name" IsSynchronizedWithCurrentItem="True" SelectedItem="{Binding ScholarPeriod}"/>
                        </StackPanel>

                    </StackPanel>
                </materialDesign:Card>

                <StackPanel Margin="20" Width="750">
                    <TextBlock Text="* Campos obligatorios" FontSize="14" FontWeight="Light"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="20" Width="750">
                    <Button x:Name="updateButton" Width="115" Margin="240,0,0,0" Cursor="Hand" IsEnabled="True" 
                            Click="UpdatePractitionerData">
                        <StackPanel Orientation="Horizontal" Width="110" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="Plus" Margin="3,3.5,1,1" Width="30"/>
                            <TextBlock Text="Actualizar"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="cancelButton" Width="120" Margin="100,0,0,0" Cursor="Hand" Background="Red" BorderBrush="Red"
                            Click="CancelUpdatePractitioner">
                        <StackPanel Orientation="Horizontal" Width="110" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="Cancel" Margin="5,3.5,1,1" Width="30"/>
                            <TextBlock Text="Cancelar"/>
                        </StackPanel>
                    </Button>

                </StackPanel>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
